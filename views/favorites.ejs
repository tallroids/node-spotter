<%- include modules/header.ejs %>
<div id="mapCont" class="col s12 m12 l4">
  <div id="map">
  </div>
  <div id="prompt" class="blue header white-text"></div>
  <div id="newLocation">
    <p>
      <input type="text" id="title">
      <label for="title">Location Title</label>
    </p>
    <p>
      <input type="text" id="desc">
      <label for="desc">Location Description</label>
    </p>
    <p>
      <input type="checkbox" id="isPublic" value="true"  checked="checked">
      <label for="isPublic">Submit Publicly?</label>
    </p>
    <input type="hidden" id="latlng">
    <p>
      <button onclick="addLocation()" class="btn-large waves-effect waves-light blue">Publish</button>
    </p>
  </div>
</div>
<div class="container col s12 m9 l6">
  <h3 id="pageName">Favorites</h3>
  <div id="locations"></div>
</div>
<a class="btn-floating btn-large waves-effect waves-light blue" onclick="showAddLocation()">
  <i class="material-icons">add</i>
</a>
<div id="hidden" class="hidden">
  <div id="editForm">
    <p>
      <input type="text" id="editTitle">
      <label for="editTitle">Location Title</label>
    </p>
    <p>
      <input type="text" id="editDesc">
      <label for="editDesc">Location Description</label>
    </p>
    <p>
      <input type="checkbox" id="editIsPublic" value="true"  checked="checked">
      <label for="editIsPublic">Submit Publicly?</label>
    </p>
    <input type="hidden" id="locationId">
    <p>
      <button onclick="editLocation()" class="btn waves-effect waves-light blue">Publish</button>
      <button onclick="deleteLocation()" class="btn waves-effect waves-light red">Delete</button>
    </p>
  </div>
</div>
  <script src="js/favorites.js"></script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5vzxhhGrSlKwQHbetNCtBuGeM2L5dloE&callback=initMap"></script>
